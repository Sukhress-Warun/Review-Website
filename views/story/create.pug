extends ../layout.pug 
block content 
    div 
        form(action="/story/create", method="POST") 
            input(name="title", type="text", placeholder="Title", required="true")
            br
            input(name="content", type="text", placeholder="your story", required="true")
            br
            button(type="submit") post
        if attempted  
            p(style="color:red;font-weight: bold;") #{message}