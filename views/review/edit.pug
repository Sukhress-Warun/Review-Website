mixin editReview(review, story)
    div.review-form
        form(action="/review/"+review._id+"/story/"+story._id+"/edit", method="POST") 
                label(for="rating") Rating 
                select(name="rating") 
                    for i in [5,4,3,2,1,0]
                        option(value=""+i, selected=(i==review.rating))= i 
                textarea(name="desc", cols="30", rows="10", placeholder="review", required="true")= review.desc
                input(type="checkbox", name="delete", value="true")
                label(for="delete") Delete
                button(type="submit") Edit 