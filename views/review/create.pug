mixin createReview(story)
    div.review-form
        form(action="/review/story/"+story._id, method="POST") 
            label(for="rating") Rating 
            select(name="rating") 
                option(value="5", selected= true) 5 
                option(value="4") 4  
                option(value="3") 3  
                option(value="2") 2  
                option(value="1") 1  
                option(value="0") 0  
            br
            textarea(name="desc", cols="30", rows="10", placeholder="review", required="true")
            br
            button(type="submit") Rate 